<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyrylo.kotlinmessenger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name=".MvpApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".splash.view.SplashMVPActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".latestmessages.view.LatestMessagesActivity"/>
        <activity android:name=".register.view.RegisterActivity"/>
        <activity android:name=".login.view.LoginActivity" />
        <activity android:name=".messages.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".latestmessages.view.LatestMessagesActivity" />
        </activity>
        <activity android:name=".main.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".latestmessages.view.LatestMessagesActivity" />
        </activity>
        <activity android:name=".messages.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".latestmessages.view.LatestMessagesActivity" />
        </activity>
    </application>

</manifest>